<h1>Pagos</h1>
<table class="table table-striped table sm">
  <thead>
    <tr>
      <th scope="col">Monto pago</th>
      <th scope="col">Saldo acum</th>
      <th scope="col">Fecha pago</th>
      <th scope="col">Total pago</th>
      <th scope="col">Medio pago</th>
      <th scope="col">Perfil</th>
      <th scope="col">Motivo</th>
      <th scope="col">Cuota del mes:</th>
      <th scope="col">Año</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.monto_pago %></td>
        <td><%= payment.saldo_acum %></td>
        <td><%= payment.fecha_pago %></td>
        <td><%= payment.total_pago %></td>
        <td><%= payment.medio_pago %></td>
        <td><%= payment.profile_id %></td>
        <td><%= payment.motivo %></td>
        <td><%= payment.mes_cuota %></td>
        <td><%= payment.anio %></td>
        <td><%= link_to 'Mostrar', payment %></td>
        <td><%= link_to 'Editar', edit_payment_path(payment) %></td>
        <td><%= link_to 'Eliminar', payment, method: :delete, data: { confirm: '¿Está segur@?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Pago', new_payment_path %>
