<h2>Cambia tu contraseña</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nueva Contraseña" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> Caracteres minimos)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "Nueva contraseña" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirma nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Nueva contraseña" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
