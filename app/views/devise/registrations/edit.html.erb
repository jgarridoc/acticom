<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "nombre@correo.cl"%>
    <%= f.label :email, "Correo" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Esperando confirmacion: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-floating">
    <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
    <%= f.label :password, "Nueva contraseña" %> <i>(déjelo en blanco si no quiere cambiarlo)</i>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> Caracteres minimos</em>
    <% end %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
    <%= f.label :password, "Repita su nueva contraseña" %>
  </div>

  <div class="form-floating">
    <%= f.password_field :current_password, class: "form-control", placeholder: "contraseña actual" %>
    <%= f.label :current_password, "Escriba su contraseña actual" %> <i>(necesitamos su contraseña actual para confirmar sus cambios)</i>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>¿Insatisfecho? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro?" }, method: :delete %></p>

<%= link_to "Volver", :back %>
