
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= image_tag("Logo_ActiCom.png", { size: "100x100", alt: "ActiCom", class: "img-responsive"} ) %>
    <h1 class="h3 mb-3 fw-normal">Comunidad Viva</h1>
    
  <div class="form-floating">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "nombre@correo.cl" %>
    <%= f.label :email, "Correo" %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, class: "form-control", placeholder: "contraseña" %>
    <%= f.label :password, "Contraseña" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recuérdame" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
