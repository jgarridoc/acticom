

<h1>Perfiles</h1>
<div class="table-responsive">
<table class="table table-striped table sm">
  <thead>
    <tr>
      <th scope="col">Rut</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido1</th>
      <th scope="col">Apellido2</th>
      <th scope="col">Telefono</th>
      <th scope="col">Cuota</th>
      <th scope="col">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.rut %></td>
        <td><%= profile.nombre %></td>
        <td><%= profile.apellido1 %></td>
        <td><%= profile.apellido2 %></td>
        <td><%= profile.telefono %></td>
        <td><%= profile.cuota %></td>
        <td><%= profile.user_id %></td>
        <td><%= link_to 'Ver', profile %></td>
        <td><%= link_to 'Editar', edit_profile_path(profile) %></td>
        <td><%= link_to 'Eliminar', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Profile', new_profile_path %>
