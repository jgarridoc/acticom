<p id="notice"><%= notice %></p>

<h1>Proyectos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Inicio votacion</th>
      <th>Cierre votacion</th>
      <th>Imagen</th>
      <th>Votos positivos</th>
      <th>Votos negativos</th>
      <th>Resultado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.nombre %></td>
        <td><%= project.descripcion %></td>
        <td><%= project.inicio_votacion %></td>
        <td><%= project.cierre_votacion %></td>
        <td><%= project.imagen %></td>
        <td><%= project.votos_positivos %></td>
        <td><%= project.votos_negativos %></td>
        <td><%= project.resultado %></td>
        <td><%= link_to 'Ver', project %></td>
        <td><%= link_to 'Editar', edit_project_path(project) %></td>
        <td><%= link_to 'Eliminar', project, method: :delete, data: { confirm: '¿Está Segur@?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Proyecto', new_project_path %>
