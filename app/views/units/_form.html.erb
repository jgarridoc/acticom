  </div>

  <div class="col-sm-6">
    <%= form.label :profile_id, class: "form-label" %>
    <%= form.select :profile_id, @profiles.map {|p|[p.nombre, p.id] }, prompt: "Seleccione una opciÃ³n...", class: "form-select" %>
    

  </div>

  <div class="col-sm-6">
    <%= form.label :nombre_calle, class: "form-label" %>
    <%= form.text_field :nombre_calle, class: "form-control" %>
  </div>

  <div class="col-sm-6">
    <%= form.label :numero_calle, class: "form-label" %>
    <%= form.text_field :numero_calle, class: "form-control" %>
  </div>

  <div class="col-sm-6">
    <%= form.label :comuna, class: "form-label" %>
    <%= form.text_field :comuna, class: "form-control" %>
  </div>

  <div class="col-sm-6">
    <%= form.label :ciudad, class: "form-label" %>
    <%= form.text_field :ciudad, class: "form-control" %>
  </div>

  <div class="col-sm-6">
    <%= form.label :region, class: "form-label" %>
